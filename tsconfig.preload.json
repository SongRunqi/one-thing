{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist/preload",
    "rootDir": "src",
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "types": ["node", "electron"]
  },
  "include": ["src/preload/**/*.ts"],
  "exclude": ["src/renderer/**", "node_modules", "dist"]
}
