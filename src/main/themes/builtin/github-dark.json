{
  "id": "github-dark",
  "name": "GitHub Dark",
  "author": "GitHub",
  "version": "1.0.0",
  "type": "full",
  "colorScheme": "dark",

  "defs": {
    "bg": "#0D1117",
    "bgSubtle": "#161B22",
    "bgInset": "#010409",
    "bgEmphasis": "#30363D",
    "fg": "#C9D1D9",
    "fgMuted": "#8B949E",
    "fgSubtle": "#6E7681",
    "borderDefault": "#30363D",
    "borderMuted": "#21262D",
    "red": "#F85149",
    "green": "#3FB950",
    "yellow": "#D29922",
    "blue": "#58A6FF",
    "purple": "#A371F7",
    "cyan": "#39C5CF",
    "orange": "#F0883E",
    "pink": "#DB61A2"
  },

  "theme": {
    "accent": "blue",
    "accentMain": "blue",
    "accentSub": { "dark": "rgba(88, 166, 255, 0.3)", "light": "rgba(88, 166, 255, 0.2)" },
    "accentRgb": "88, 166, 255",

    "bg": {
      "app": "bgInset",
      "sidebar": "bg",
      "chat": "bg",
      "panel": "bg",
      "elevated": "bgSubtle",
      "floating": "bgEmphasis",
      "message": {
        "user": "bgSubtle",
        "userSolid": "bgSubtle",
        "ai": "transparent",
        "system": "bgSubtle",
        "error": "rgba(248, 81, 73, 0.15)",
        "hover": "rgba(201, 209, 217, 0.03)"
      },
      "toolCall": "bgSubtle",
      "toolCallHover": "bgEmphasis",
      "toolResult": "bgSubtle",
      "input": "bg",
      "inputFocus": "bgSubtle",
      "btn": {
        "primary": "blue",
        "primaryHover": "#6DB3FF",
        "secondary": "bgEmphasis",
        "secondaryHover": "#484F58",
        "ghost": "transparent",
        "ghostHover": "bgSubtle",
        "danger": "red",
        "dangerHover": "#FA6E65"
      },
      "code": {
        "inline": "bgSubtle",
        "block": "bgInset",
        "header": "bgSubtle"
      },
      "menu": "bgSubtle",
      "menuItemHover": "bgEmphasis",
      "tooltip": "fg",
      "modal": "bg",
      "selected": "rgba(88, 166, 255, 0.2)",
      "selectedHover": "rgba(88, 166, 255, 0.25)",
      "highlight": "rgba(210, 153, 34, 0.2)",
      "hover": "rgba(201, 209, 217, 0.05)",
      "active": "rgba(201, 209, 217, 0.1)"
    },

    "text": {
      "primary": "fg",
      "secondary": "fgMuted",
      "muted": "fgSubtle",
      "faint": "borderDefault",
      "error": "red",
      "warning": "orange",
      "success": "green",
      "info": "cyan",
      "link": "blue",
      "linkHover": "#6DB3FF",
      "user": {
        "primary": "fg",
        "secondary": "fgMuted"
      },
      "ai": {
        "primary": "fgMuted",
        "secondary": "fgSubtle",
        "thinking": "borderDefault"
      },
      "tool": {
        "name": "purple",
        "args": "borderDefault",
        "result": "fgSubtle",
        "error": "red"
      },
      "sidebar": {
        "title": "fg",
        "item": "fgSubtle",
        "itemActive": "blue",
        "itemHover": "fg",
        "muted": "borderDefault"
      },
      "input": "fg",
      "inputPlaceholder": "borderDefault",
      "btn": {
        "primary": "bgInset",
        "secondary": "fg",
        "ghost": "fgSubtle",
        "danger": "bgInset"
      },
      "code": {
        "inline": "pink",
        "block": "fg",
        "comment": "fgSubtle",
        "keyword": "red",
        "string": "blue",
        "number": "blue",
        "function": "purple",
        "variable": "orange",
        "operator": "red"
      },
      "menu": {
        "item": "fgSubtle",
        "itemHover": "fg",
        "itemActive": "blue",
        "header": "borderDefault"
      },
      "label": "fgSubtle",
      "helper": "borderDefault"
    },

    "border": {
      "default": "borderDefault",
      "subtle": "borderMuted",
      "strong": "fgSubtle",
      "accent": "blue",
      "error": "red",
      "success": "green",
      "warning": "orange",
      "input": "borderDefault",
      "inputFocus": "blue",
      "inputError": "red",
      "message": "borderMuted",
      "messageUser": "borderDefault",
      "code": "borderDefault",
      "divider": "borderMuted"
    },

    "shadow": {
      "xs": "0 1px 2px rgba(0, 0, 0, 0.3)",
      "sm": "0 2px 4px rgba(0, 0, 0, 0.35)",
      "md": "0 4px 12px rgba(0, 0, 0, 0.45)",
      "lg": "0 8px 24px rgba(0, 0, 0, 0.5)",
      "xl": "0 16px 48px rgba(0, 0, 0, 0.55)",
      "inner": "inset 0 2px 4px rgba(0, 0, 0, 0.25)",
      "glow": {
        "accent": "0 0 20px rgba(88, 166, 255, 0.3)",
        "error": "0 0 20px rgba(248, 81, 73, 0.3)"
      },
      "elevated": "0 8px 32px rgba(0, 0, 0, 0.55)",
      "floating": "0 12px 48px rgba(0, 0, 0, 0.65)"
    },

    "effects": {
      "gradientUserBubble": "linear-gradient(135deg, #161B22 0%, #0D1117 100%)",
      "gradientAiBubble": "linear-gradient(135deg, transparent 0%, transparent 100%)",
      "gradientAccent": "linear-gradient(135deg, #58A6FF 0%, #6DB3FF 100%)",
      "overlayHover": "rgba(201, 209, 217, 0.05)",
      "overlayActive": "rgba(201, 209, 217, 0.1)",
      "overlayDisabled": "rgba(0, 0, 0, 0.5)",
      "blurBackdrop": "24px"
    },

    "color": {
      "danger": "red",
      "dangerLight": "rgba(248, 81, 73, 0.15)",
      "warning": "orange",
      "warningLight": "rgba(240, 136, 62, 0.15)",
      "success": "green",
      "successLight": "rgba(63, 185, 80, 0.15)",
      "info": "cyan",
      "infoLight": "rgba(57, 197, 207, 0.15)"
    }
  }
}
