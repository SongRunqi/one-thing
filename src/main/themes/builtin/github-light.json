{
  "id": "github-light",
  "name": "GitHub Light",
  "author": "GitHub",
  "version": "1.0.0",
  "type": "full",
  "colorScheme": "light",

  "defs": {
    "bg": "#FFFFFF",
    "bgSubtle": "#F6F8FA",
    "bgInset": "#EFF2F5",
    "bgEmphasis": "#D0D7DE",
    "fg": "#24292F",
    "fgMuted": "#57606A",
    "fgSubtle": "#6E7781",
    "borderDefault": "#D0D7DE",
    "borderMuted": "#D8DEE4",
    "red": "#CF222E",
    "green": "#1A7F37",
    "yellow": "#9A6700",
    "blue": "#0969DA",
    "purple": "#8250DF",
    "cyan": "#1B7C83",
    "orange": "#BC4C00",
    "pink": "#BF3989"
  },

  "theme": {
    "accent": "blue",
    "accentMain": "blue",
    "accentSub": { "dark": "rgba(9, 105, 218, 0.2)", "light": "rgba(9, 105, 218, 0.15)" },
    "accentRgb": "9, 105, 218",

    "bg": {
      "app": "bg",
      "sidebar": "bgSubtle",
      "chat": "bg",
      "panel": "bg",
      "elevated": "bgSubtle",
      "floating": "bgEmphasis",
      "message": {
        "user": "bgSubtle",
        "userSolid": "bgSubtle",
        "ai": "transparent",
        "system": "bgInset",
        "error": "rgba(207, 34, 46, 0.1)",
        "hover": "rgba(36, 41, 47, 0.03)"
      },
      "toolCall": "bgSubtle",
      "toolCallHover": "bgInset",
      "toolResult": "bgSubtle",
      "input": "bg",
      "inputFocus": "bgSubtle",
      "btn": {
        "primary": "blue",
        "primaryHover": "#1174E6",
        "secondary": "bgSubtle",
        "secondaryHover": "bgInset",
        "ghost": "transparent",
        "ghostHover": "bgSubtle",
        "danger": "red",
        "dangerHover": "#D93D48"
      },
      "code": {
        "inline": "bgInset",
        "block": "bgSubtle",
        "header": "bgInset"
      },
      "menu": "bgSubtle",
      "menuItemHover": "bgInset",
      "tooltip": "fg",
      "modal": "bg",
      "selected": "rgba(9, 105, 218, 0.15)",
      "selectedHover": "rgba(9, 105, 218, 0.2)",
      "highlight": "rgba(154, 103, 0, 0.15)",
      "hover": "rgba(36, 41, 47, 0.04)",
      "active": "rgba(36, 41, 47, 0.08)"
    },

    "text": {
      "primary": "fg",
      "secondary": "fgMuted",
      "muted": "fgSubtle",
      "faint": "borderDefault",
      "error": "red",
      "warning": "orange",
      "success": "green",
      "info": "cyan",
      "link": "blue",
      "linkHover": "#1174E6",
      "user": {
        "primary": "fg",
        "secondary": "fgMuted"
      },
      "ai": {
        "primary": "fgMuted",
        "secondary": "fgSubtle",
        "thinking": "borderDefault"
      },
      "tool": {
        "name": "purple",
        "args": "borderDefault",
        "result": "fgSubtle",
        "error": "red"
      },
      "sidebar": {
        "title": "fg",
        "item": "fgSubtle",
        "itemActive": "blue",
        "itemHover": "fg",
        "muted": "borderDefault"
      },
      "input": "fg",
      "inputPlaceholder": "borderDefault",
      "btn": {
        "primary": "bg",
        "secondary": "fg",
        "ghost": "fgSubtle",
        "danger": "bg"
      },
      "code": {
        "inline": "pink",
        "block": "fg",
        "comment": "fgSubtle",
        "keyword": "red",
        "string": "blue",
        "number": "blue",
        "function": "purple",
        "variable": "orange",
        "operator": "red"
      },
      "menu": {
        "item": "fgSubtle",
        "itemHover": "fg",
        "itemActive": "blue",
        "header": "borderDefault"
      },
      "label": "fgSubtle",
      "helper": "borderDefault"
    },

    "border": {
      "default": "borderDefault",
      "subtle": "borderMuted",
      "strong": "fgSubtle",
      "accent": "blue",
      "error": "red",
      "success": "green",
      "warning": "orange",
      "input": "borderDefault",
      "inputFocus": "blue",
      "inputError": "red",
      "message": "borderMuted",
      "messageUser": "borderDefault",
      "code": "borderDefault",
      "divider": "borderMuted"
    },

    "shadow": {
      "xs": "0 1px 2px rgba(36, 41, 47, 0.06)",
      "sm": "0 2px 4px rgba(36, 41, 47, 0.08)",
      "md": "0 4px 12px rgba(36, 41, 47, 0.1)",
      "lg": "0 8px 24px rgba(36, 41, 47, 0.12)",
      "xl": "0 16px 48px rgba(36, 41, 47, 0.15)",
      "inner": "inset 0 2px 4px rgba(36, 41, 47, 0.05)",
      "glow": {
        "accent": "0 0 20px rgba(9, 105, 218, 0.2)",
        "error": "0 0 20px rgba(207, 34, 46, 0.2)"
      },
      "elevated": "0 8px 32px rgba(36, 41, 47, 0.1)",
      "floating": "0 12px 48px rgba(36, 41, 47, 0.15)"
    },

    "effects": {
      "gradientUserBubble": "linear-gradient(135deg, #F6F8FA 0%, #FFFFFF 100%)",
      "gradientAiBubble": "linear-gradient(135deg, transparent 0%, transparent 100%)",
      "gradientAccent": "linear-gradient(135deg, #0969DA 0%, #1174E6 100%)",
      "overlayHover": "rgba(36, 41, 47, 0.04)",
      "overlayActive": "rgba(36, 41, 47, 0.08)",
      "overlayDisabled": "rgba(255, 255, 255, 0.5)",
      "blurBackdrop": "24px"
    },

    "color": {
      "danger": "red",
      "dangerLight": "rgba(207, 34, 46, 0.1)",
      "warning": "orange",
      "warningLight": "rgba(188, 76, 0, 0.1)",
      "success": "green",
      "successLight": "rgba(26, 127, 55, 0.1)",
      "info": "cyan",
      "infoLight": "rgba(27, 124, 131, 0.1)"
    }
  }
}
